<h2>Positions Report</h2>

{{ shop.metafields.acf_settings.customer }}


{% assign faqs = page.metafields.faq.heading %}

        {% for value in faqs %}

            {% assign i = forloop.index0 %}
            
            <div class="item item--{{ i }}">
                <h4>{{ page.metafields.faq.heading[i] }}</h4>
                <p>{{ page.metafields.faq.content[i] }}</p>
            </div>
            
        {% endfor %}


{% for field in shop.metafields.acf_settings.customer.fields %}

  {% assign field_section = field.section %}
  {% assign field_value = customer.metafields[field.namespace][field.name] %}
  

  {% for section in field_section %}
    {% assign i = forloop.index0 %}
    {{ i }}
    <p>{{ field.label }}: {{ field_value }}</p>
  {% endfor %}
  
  {% if field_section.id != current_section.id %}

  {% endif %}
  <p>{{ field.label }}: {{ field_value }}</p>

  {% assign current_section = field_section %}

{% endfor %}

<table>
  <tr>
    {% for field in shop.metafields.acf_settings.customer.fields %}
        <th>{{ field.label }}</th>
    {% endfor %}
  </tr>


  <tr>
    

{% for item in customer.metafields.accentuate.coffee %}
    <td>{{ item | replace: '-', ' ' }}</td>
{% endfor %}
{% for item in customer.metafields.accentuate.status %}
    <td>{{ item }}</td>
{% endfor %}
{% for item in customer.metafields.accentuate.booked %}
    <td>{{ item }}</td>
{% endfor %}
{% for item in customer.metafields.accentuate.balance %}
    <td>{{ item }}</td>
{% endfor %}
  </tr>

</table>





